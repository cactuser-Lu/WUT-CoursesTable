page{
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  background-color: rgb(248, 248, 248);
}
.page{
    height: 100%;
    display: flex;
    flex-direction: column;
    background-color: #FFFFFF;
}
.corner {
    font-size: 9pt;
    background-color: #FFFFFF;
    color: #888;
    text-align:center;
}
.corner .left, .corner.sidebar {
    width: 35rpx;
    border-right: 1px solid #d5d5d5;
}
.head {
    display: flex;
    position:fixed;
    width: 100%;
    height: 60rpx;
    z-index: 100;
}
.head::after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    border-bottom: 1px solid #d5d5d5;
}
.head .weeks text {
    display: block;
    line-height: 30rpx;
}
.head .week-title {
    flex: auto;
    display: flex;
}
.week-title text {
    flex: auto;
    line-height: 60rpx;
}
.placeholder {
    height: 60rpx;
}
.body {
    display: flex;
}
.sidebar {
    flex: none;
    display: flex;
    flex-direction: column;
    padding: 10rpx 0;
}
.sidebar view {
    display: flex;
    flex-direction: column;
    justify-content:space-around;
    height: 200rpx;
}
/*.sidebar view:last-child {
    height: 100rpx;
}*/
.sidebar view:nth-child(1), .sidebar view:nth-child(3) {
    margin-bottom: 10rpx;
}
.sidebar view:nth-child(2), .sidebar view:nth-child(4) {
    margin-bottom: 15rpx;
}
.content {
    flex: auto;
    display: flex;
    padding: 10rpx 0;
}
.content .column {
    flex: 1;
    display: flex;
    flex-direction: column;
    position: relative;
    margin: 0 3px;
}
.column .course-wrap {
    position: absolute;
    width: 100%;
    height: 200rpx;
}
.course-wrap text {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 10pt;
    line-height: 11pt;
}
.course-wrap .course {
    
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    position: absolute;
    width: 100%;
    height: 100%;
    text-align: center;
    background-color: #fcfcfc;
    color: #fff;
    z-index: 1;
}
.course text{
    font-size: 25rpx;
}

#select picker{
  /* flex: 1; */
  float:right;
  margin:20rpx;
  /* margin-top:-20rpx; */
  padding: 10rpx;
  background-color:#01C5FD;
  z-index:1;
  font-size:35rpx; 
  color: #fff;
}

.shadow {
box-shadow: 0 0rpx 8rpx rgba(0, 0, 0, 0.2);
}