.content {
    flex: auto;
    display: flex;
    padding: 10rpx 0;
}
.content .column {
    flex: 1;
    display: flex;
    flex-direction: column;
    position: relative;
    margin: 0 2px;
}
/* .column .course-wrap {
    position: absolute;
    width: 100%;
    height: 200rpx;
} */

.column .course-wrap {
    position: relative;
    width: 100%;
    display: flex;
    flex-direction: column;
    margin-bottom: 10rpx;
    /* height: 200rpx; */
    
}
.course-wrap text {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 10pt;
    line-height: 11pt;
}
.course-wrap .course {
    
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    /* position: absolute; */
    width: 100%;
    height: 100%;
    text-align: center;
    background-color: #fcfcfc;
    color: #fff;
    z-index: 1;

    border-radius:4px
}
.course text{
    font-size: 25rpx;
}

