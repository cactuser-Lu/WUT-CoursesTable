page{
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  background-color: rgb(248, 248, 248);
}
.page{
    height: 100%;
    display: flex;
    flex-direction: column;
    background-color: #FFFFFF;
}
.corner {
    font-size: 9pt;
    background-color: #FFFFFF;
    color: #888;
    text-align:center;
    margin-right: 3rpx;
}

.corner .left, .corner.sidebar {
    width: 55rpx;
    /* 35rpx */
    border-right: 1px solid #d5d5d5;
}
.head {
    display: flex;
    position:fixed;
    width: 100%;
    height: 65rpx;/* 60 */
    
    z-index: 100;
}
.head::after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    border-bottom: 1px solid #d5d5d5;
}
.head .weeks text {
    display: block;
    line-height: 30rpx;
}
.head .week-title {
    flex: auto;
    display: flex;
}
.week-title text {
    flex: auto;
    line-height: 30rpx;
    /* 60 */
}
.placeholder {
    height: 65rpx;
    /* 60 */
}
.body {
    display: flex;
}
